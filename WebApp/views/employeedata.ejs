<!DOCTYPE html>
<html lang="en">
    <head>
        <!-- Google tag (gtag.js) -->
        <script async src="https://www.googletagmanager.com/gtag/js?id=G-45G6K3DR9B"></script>
        <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());

        gtag('config', 'G-45G6K3DR9B');
        </script>        
        <% var data = {"columns": [], "rows": []} %>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <meta name="description" content="" />
        <meta name="author" content="" />
        <title>Mindful Media Survey - Data</title>
        <!-- Favicon-->
        <link rel="icon" type="image/x-icon" href="../assets/img/favicon_io/favicon.ico" />
        <!-- Font Awesome icons (free version)-->
        <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
        <!-- Google fonts-->
        <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css" />
        <link href="https://fonts.googleapis.com/css?family=Roboto+Slab:400,100,300,700" rel="stylesheet" type="text/css" />
        <!-- Core theme CSS (includes Bootstrap)-->
        <link href="../css/styles.css" rel="stylesheet" />
    </head>
    <body id="page-top">
        <!-- Admin Navigation-->
        <nav class="navbar navbar-expand-lg navbar-dark fixed-top" id="mainNav">
            <div class="container">
                <!-- Logo Homepage Link -->
                <a href="/employeeindex?username=<%= params.username %>" class="navbar-brand" ><img src="../assets/img/logoAllWhite.png" alt="..." /><img src="../assets/img/MindfulMedia.png" alt="..." /></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                    Menu
                    <i class="fas fa-bars ms-1"></i>
                </button>
                <div class="collapse navbar-collapse" id="navbarResponsive">
                    <ul class="navbar-nav text-uppercase ms-auto py-4 py-lg-0">
                        <!-- Account Link -->
                        <li class="nav-item"><a class="nav-admin" href="/employeeaccount?username=<%= params.username %>">My Account</a></li>
                        <!-- Database-->
                        <li class="nav-item"><a class="nav-admin" href="/employeedata?username=<%= params.username %>">Survey Data</a></li>     
                        <!-- Google Website Analytics-->
                        <li class="nav-item"><a class="nav-admin"  href="http://www.google.com/analytics" target="_blank">Website Analytics</a></li>         
                        <!-- Dashboard Link -->
                        <li class="nav-item"><a class="nav-admin" href="/employeetableau?username=<%= params.username %>">Interactive Dashboard</a></li>
                        <!-- Survey Button -->
                        <li class="nav-item"><a class="nav-admin" href="/employeesurvey?username=<%= params.username %>">Take Survey</a></li>
                    </ul>
                </div>
            </div>
        </nav>
        <!-- Masthead-->
        <header class="mini">
            <div class="container">
                <div class="mini-subheading">Database</div>
            </div>
        </header>

        <!-- Data Table holder -->
        <section class="page-section" id="data">
            <div class="container">
                <div class="text-center">
                    <% if (!params.rows.length == 0) { %>
                        <table>
                            <thead>
                                <tr>
                                    <% for (let i=0; i < params.columns.length; i++) { %>
                                        <th><%= params.columns[i] %></th>
                                        <% }; %>
                                    <th>Edit</th>
                                    <th>Delete</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% for (let i = 0; i < params.rows.length; i++) { %>
                                    <tr>
                                        <% for (let j = 0; j < params.columns.length; j++) { %>
                                            <th><%= params.rows[i][j] %></th>
                                        <% }; %>
                                        <th>
                                            <form action="/employeeeditSurvey/<%= params.rows[i][0] %>?username=<%= params.username %>" method="GET">
                                                <input type="submit" value="Edit" id="editSurvey<%= params.rows[i][0] %>" name="editSurvey<%= params.rows[i][0] %>">
                                            </form>
                                        </th>
                                        <th>
                                            <form action="/employeedeleteSurvey/<%= params.rows[i][0] %>?username=<%= params.username %>" method="POST">
                                                <input type="submit" value="Delete" id="deleteSurvey<%= params.rows[i][0] %>" name="deleteSurvey<%= params.rows[i][0] %>">
                                            </form>
                                        </th>
                                    </tr>
                                <% }; %>
                            </tbody>
                        </table>
                        <br>
                    <% } else { %>

                    <% }; %>
                </div>
        </section>
        <!-- Admin Footer-->
        <footer class="footer py-4">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-4 my-3 my-lg-0">
                        <!-- Logout Link-->               
                        <a class="link-dark text-decoration-none" href="/index" >Logout</a>
                    </div>
                    <div class="col-lg-4 text-lg-end">
                        <a class="link-dark text-decoration-none me-3" href="/employeeprivacy">Privacy Policy</a>
                        <a class="link-dark text-decoration-none" href="/employeeterms">Terms of Use</a>
                    </div>
                </div>
            </div>
        </footer>
        <!-- Bootstrap core JS-->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
        <!-- Core theme JS-->
        <script src="js/scripts.js"></script>
        <!-- * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * *-->
        <!-- * *                               SB Forms JS                               * *-->
        <!-- * * Activate your form at https://startbootstrap.com/solution/contact-forms * *-->
        <!-- * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * *-->
        <script src="https://cdn.startbootstrap.com/sb-forms-latest.js"></script>
    </body>
</html>