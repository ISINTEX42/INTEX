        <!-- Masthead-->
        <header class="mini" >
        </header>
        <!-- My Account Info -->
        <section class="page-section" id="myAccount">
            <div class="container">
                <div class="text-center">
                    <h2 class="section-heading text-uppercase">My Account</h2>
                </div>
                <form class="form-subscribe" id="contactForm" action="/editAccount" method="post">
                    <div class="row align-items-stretch mb-5">
                        <div class="col-md-6">
                            <!-- firstName Editable-->
                            <div class="form-group">
                                <label id="employeeFirstName">First Name:</label>
                                <input class="form-control" id="employeeFirstName" name="employeeFirstName" type="text" value="<%= params.first_name %>"/>
                            </div>
                            <!-- lastName Editable-->
                            <label id="employeeLastName">Last Name:</label>
                            <div class="form-group">
                                <input class="form-control" id="employeeLastName" name="employeeLastName"  type="text" value="<%= params.last_name %>"/>
                            </div>
                        </div>
                        <!-- change column-->
                        <div class="col-md-6">
                            <!-- City ID CANNOT CHANGE-->
                            <label id="employeeId">City ID:</label>
                            <div class="form-group">
                                <input class="form-control" id="employeeId" name="employeeId" type="text" value="<%= params.city_id %>" disabled/>
                            </div>
                            <!-- Work Email address CANNOT CHANGE-->
                            <label id="employeeId">Username:</label>
                            <div class="form-group mb-md-0">  
                                <input class="form-control" id="workEmail" name="workEmail" type="email" value="<%= params.username %>" disabled/>
                            </div>
                        </div>
                    <div class="text-lg-end">
                        <br>
                        <!-- Update Button-->
                        <button class="btn btn-info btn-sm text-uppercase " id="updateButton" name="updateButton" type="submit" >Update</button>
                    </div>
                </form>

        <!-- Admin Footer-->
