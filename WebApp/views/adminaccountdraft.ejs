                <form>
                    <label>Enter the Age in Years:</label>
                    <br>
                    <input type="text" id="txtAge" onblur="checkRetirement();">
                    <br><br>
                    <label>Retirement Year:</label>
                    <br>
                    <input type="text" id="txtRetireYear" disabled=true>
                    <br><br>
                    <button type="submit" id="submit">Submit Data</button>
                </form>
                <script>
                    function checkRetirement()
                    {
                        let iAge;
                        
                        iAge = parseInt(document.getElementById("txtAge").value);
                        
                        if (iAge >= 65)
                        {
                            document.getElementById("txtRetireYear").disabled = false;
                            document.getElementById("txtRetireYear").focus();
                        }
                        else
                        {
                            document.getElementById("txtRetireYear").disabled = true;   
                            document.getElementById("submit").focus();                             
                        }
                    }
            
                    function changeData()
                    {
                        document.getElementById("myInput").value = "New Data";
                    }
                </script>
